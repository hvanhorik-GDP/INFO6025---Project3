  <!-- Only ship a clean release build -->
  <Target Name="project_03" DependsOnTargets="" Condition="'$(Configuration)|$(Platform)' == 'Release|x64'">
	<Message Importance="High" Text="Let's ship this already!" />
	<MakeDir Directories="$(OutputDir)" />
	<Copy SourceFiles="$(SolutionDir)$(Platform)\$(Configuration)\$(TargetName)$(TargetExt)" DestinationFolder="$(OutputDir)" />
	<Copy SourceFiles="$(SolutionDir)$(Platform)\$(Configuration)\fmod.dll" DestinationFolder="$(OutputDir)" />
	<Copy SourceFiles="@(Shaders)" DestinationFolder="$(ShadersDir)" />
	<Copy SourceFiles="@(XMLs)" DestinationFolder="$(XMLDir)" />
	<Copy SourceFiles="@(Physics)" DestinationFolder="$(PhysicsDir)" />
	<Copy SourceFiles="@(Graphics)" DestinationFolder="$(GraphicsDir)" />
	<Exec Command="7z.exe a -t7z &quot;$(OutputDir)Lukas_Gustafson.7z&quot; &quot;$(OutputDir)&quot;" />
  </Target>
   